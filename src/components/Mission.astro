---
interface Paragraph {
  text: string;
  style?: string;
}

interface Props {
  headline: string;
  paragraphs: Paragraph[];
}

const { headline, paragraphs } = Astro.props;
---

<section id="mission" class="py-20 md:py-32 border-t border-slate-800/50">
  <div class="max-w-3xl mx-auto px-4 sm:px-6">
    <h2 class="text-3xl md:text-5xl font-bold text-white">{headline}</h2>
    <div class="mt-8 space-y-6">
      {paragraphs.map((p) => {
        if (p.style === 'accent') {
          return (
            <div class="border-l-2 border-blue-500 pl-6 my-8">
              <p class="text-lg text-white font-medium whitespace-pre-line leading-relaxed">
                {p.text}
              </p>
            </div>
          );
        }
        if (p.style === 'strong') {
          return (
            <p class="text-xl md:text-2xl font-semibold text-white whitespace-pre-line leading-relaxed mt-8">
              {p.text}
            </p>
          );
        }
        return (
          <p class="text-lg text-slate-300 leading-relaxed">{p.text}</p>
        );
      })}
    </div>
  </div>
</section>

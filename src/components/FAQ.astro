---
interface FAQItem {
  question: string;
  answer: string;
}

interface Props {
  title: string;
  items: FAQItem[];
}

const { title, items } = Astro.props;
---

<section id="faq" class="py-20 md:py-32 border-t border-slate-800/50">
  <div class="max-w-3xl mx-auto px-4 sm:px-6">
    <h2 class="text-3xl md:text-4xl font-bold text-white text-center">{title}</h2>
    <div class="mt-12 divide-y divide-slate-800 border-t border-b border-slate-800">
      {items.map((item) => (
        <details class="group">
          <summary class="flex items-center justify-between cursor-pointer list-none py-5 text-left [&::-webkit-details-marker]:hidden">
            <span class="text-base font-medium text-slate-200 pr-4">{item.question}</span>
            <span class="flex-shrink-0 text-slate-500 group-open:rotate-180 transition-transform duration-200">
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M5 7.5L10 12.5L15 7.5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
              </svg>
            </span>
          </summary>
          <p class="pb-5 text-slate-400 leading-relaxed">{item.answer}</p>
        </details>
      ))}
    </div>
  </div>
</section>

---
interface Step {
  number: number;
  title: string;
  description: string;
  optional?: boolean;
}

interface Props {
  title: string;
  steps: Step[];
}

const { title, steps } = Astro.props;
---

<section id="workflow" class="py-20 md:py-32 border-t border-slate-800/50">
  <div class="max-w-5xl mx-auto px-4 sm:px-6">
    <h2 class="text-3xl md:text-4xl font-bold text-white text-center">{title}</h2>
    <div class="mt-16 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
      {steps.map((step) => (
        <div>
          <div class="text-sm font-mono text-blue-400 mb-3">
            {step.optional ? `Step ${step.number} (Optional)` : `Step ${step.number}`}
          </div>
          <h3 class="text-xl font-semibold text-white">{step.title}</h3>
          <p class="mt-2 text-slate-400 leading-relaxed">{step.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>

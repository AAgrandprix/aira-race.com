---
interface Step {
  title: string;
  description: string;
}

interface Cta {
  text: string;
  href: string;
}

interface Props {
  title: string;
  description: string;
  steps: Step[];
  cta: Cta;
  ctaSubtitle?: string;
}

const { title, description, steps, cta, ctaSubtitle } = Astro.props;
---

<section id="getting-started" class="py-20 sm:py-32">
  <div class="max-w-5xl mx-auto px-4 sm:px-6">
    <div class="text-center">
      <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">{title}</h2>
      <p class="mt-4 text-lg leading-8 text-slate-400">{description}</p>
    </div>
    <div class="mt-16 max-w-2xl mx-auto">
      <ul class="space-y-10">
        {steps.map((step, index) => (
          <li class="flex items-start">
            <div class="flex-shrink-0 h-10 w-10 bg-blue-600 rounded-full flex items-center justify-center text-white font-bold text-lg">
              {index + 1}
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-semibold leading-6 text-white">{step.title}</h3>
              <p class="mt-2 text-base text-slate-400">{step.description}</p>
            </div>
          </li>
        ))}
      </ul>
    </div>
    <div class="mt-16 text-center">
      <a
        href={cta.href}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center px-6 py-3 text-base font-semibold text-white bg-blue-600 rounded-lg hover:bg-blue-500 transition-colors"
      >
        {cta.text}
      </a>
      {ctaSubtitle && (
        <p class="mt-4 text-sm text-slate-400">{ctaSubtitle}</p>
      )}
    </div>
  </div>
</section>

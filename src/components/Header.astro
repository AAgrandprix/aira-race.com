---
import landing from '../data/landing.json';

const navLinks = [
  { text: 'Competitions', href: '/#competitions' },
  { text: 'Ranking', href: '/#ranking' },
  { text: 'Vision', href: '/vision' },
];

const loginUrl = '/login';
---

<header class="fixed top-0 left-0 right-0 z-50 bg-slate-950/80 backdrop-blur-lg border-b border-slate-800/50">
  <div class="max-w-5xl mx-auto px-4 sm:px-6">
    <div class="flex items-center justify-between h-14">
      {/* Site branding */}
      <div class="shrink-0 mr-4">
        <a href="/">
          <img class="h-9 w-auto" src="/mark-aira.png" alt={landing.site.name} />
        </a>
      </div>

      {/* Desktop navigation */}
      <nav class="hidden md:flex md:grow">
        <ul class="flex grow justify-center flex-wrap items-center">
          {navLinks.map(link => (
            <li>
              <a href={link.href} class="font-medium text-slate-300 hover:text-white px-4 py-3 flex items-center transition duration-150 ease-in-out">
                {link.text}
              </a>
            </li>
          ))}
        </ul>
      </nav>

      {/* Login button */}
      <div class="flex-none">
        <a
          href={loginUrl}
          class="inline-flex items-center px-4 py-2 text-sm font-semibold text-white bg-blue-600 rounded-lg hover:bg-blue-500 transition-colors"
        >
          Login
        </a>
      </div>

      {/* TODO: Add mobile menu */}
    </div>
  </div>
</header>

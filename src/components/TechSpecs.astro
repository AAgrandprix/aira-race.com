---
interface SpecItem {
  title: string;
  description: string;
}

interface Props {
  title: string;
  items: SpecItem[];
}

const { title, items } = Astro.props;
---

<section id="features" class="py-20 md:py-32 border-t border-slate-800/50">
  <div class="max-w-5xl mx-auto px-4 sm:px-6">
    <h2 class="text-3xl md:text-4xl font-bold text-white text-center">{title}</h2>
    <div class="mt-12 grid grid-cols-1 sm:grid-cols-2 gap-6">
      {items.map((item) => (
        <div class="p-6 rounded-xl border border-slate-800 bg-slate-900/50">
          <h3 class="text-lg font-semibold text-white font-mono">{item.title}</h3>
          <p class="mt-2 text-slate-400 leading-relaxed">{item.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
